@model List<Animal>
@{
    ViewData["Title"] = "Animaux Favoris";
}

@if (Model.Count == 0)
{
    <p>Aucun Animal Favori à afficher</p>
}
else
{
    @foreach (var animal in Model)
    {
        <p>
            @animal.Id @animal.FirstName @animal.Age @animal.Species
        </p>
        <a asp-action="Details" asp-controller="Animal" asp-route-id="@animal.Id" class="btn btn-primary">Détails</a>
    }
}
