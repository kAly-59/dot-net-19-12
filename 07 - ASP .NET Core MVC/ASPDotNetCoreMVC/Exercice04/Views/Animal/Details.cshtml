@model Animal

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Animal</h4>
    <hr />
    @if (Model == null)
    {
        <p class="text-danger">Animal non trouvé</p>
    }
    else
    {
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Id)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Id)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.FirstName)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.FirstName)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Age)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Age)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Species)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Species)
            </dd>
        </dl>
        <img alt="photo de l'animal" src="@Model.PicturePath" class="img-thumbnail" style="width: 500px"/>
        <div>
            <a class="btn btn-primary" asp-action="Index">Retour à la liste des animaux</a>
            <a class="btn btn-danger" asp-action="Delete" asp-route-id="@Model.Id">Supprimer l'animal</a>
        </div>
    }
</div>
